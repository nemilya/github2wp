.row.span12
  %pre= @content

.row.span12
  .span9.well
    %form.form-inline{:action => "/try", :method=>"post"}

      %p
        %label Blog:
        http://
        %input{:type=>"text", :name=>"blog"}

      %p
        %label From source URL:
        %input.input-xxlarge{:type=>"text", :name=>"url", :value => @default_url }

      %p
        %label To WP page_id:
        %input.input-small{:type=>"text", :name=>"wp_id"}

      %p
        %label WP Login:
        %input{:type=>"text", :name=>"login"}

      %p
        %label WP Pwd:
        %input{:type=>"password", :name=>"password"}
  
      %hr
      %input.btn.btn-primary{:type=>"submit", :value=>"Update"}
